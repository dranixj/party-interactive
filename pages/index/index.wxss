/**index.wxss**/
@import "../../common/lib/weui.wxss";
page{
  --height:44px;
  --right:190rpx;
}
button{
  margin-top: 30rpx;
  margin-bottom: 30rpx;
  margin: 40rpx 0;
}
.button-sp-area{
  margin: 0 auto;
  width: 60%;
}
.button-sp1-area{
  margin-top: 100rpx;
  margin-left: 10%;
  display: flex;
  flex-direction: column;
  width: 80%;
}
.page-staff-bind{
  margin-top: 150rpx;
}
.login-tooltip-container{
  display: flex;
  flex-direction: column;
  align-items: center;
}
.login-tooltip{
  width:600rpx;
}
.input-tooltip{
  margin-top: 80rpx;
  width:280rpx;
}
.input-staff{
  background: #fff;
  margin-top: 40rpx;
  width: 95%;
  height: 88rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.input-radius{
  border-radius:25rpx;
}
.input-content{
  width: 90%;
}
.page-section{
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}
.text-box{
  display: flex;
  flex-direction: column;
  min-height: 60rpx;
  justify-content: left;
  align-items: left;
  text-align: left;
  font-size: 30rpx;
  color: #353535;
  line-height: 2em;
}
.text-box-prize-name{
  text-align: center;
  color: #ffe65a;
  font-style: italic;
  font-weight: bold;
  font-size: 46rpx;
}
.activity-number{
  position: fixed;
  width: 160rpx;
  height: 100%;
  margin-top: -35rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.activity-number-background{
  width: 100%;
  height: 100%;
  background-size:100% 100%;
}
.text-box-activity-number-container{
  width: 100rpx;
  position: absolute;
  margin-left: 10rpx;
  display: flex;
  flex-direction: row;
}
.text-box-activity-number{
  margin-top: 20rpx;
  text-align: center;
  color: #e0b33b;
  font-style: italic;
  font-weight: bold;
  font-size: 26rpx;
}
.text-box-activity-number-sum{
  color: #fff;
}
.text-box-activity-number-memo{
  position: absolute;
  margin-top: 50rpx;
  margin-left: -10rpx;
  color: #fff;
}
.join-progress-container{
  margin-top: -50rpx;
  width: 100%;
  height: 480rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.prize-background{
  width: 70%;
}
.prize-background-next{
  width: 0rpx;
  height:0rpx;
}
.prize-content{
  width: 250rpx;
  position: absolute;
}
.activity-info-container{
  margin-top: -30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  height: 250rpx;
}
.activity-info-background{
  width: 80%;
  background-size:100% 100%;
}
.activity-info-line-container{
  position: absolute;
  width: 80%;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.activity-info-line1-container{
  line-height: 80rpx;
  display: flex;
  flex-direction: row;
}
.text-box-activity-info{
  color: #fff;
  font-weight: bold;
  font-size: 26rpx;
}
.text-box-activity-info-count{
  margin-left: 20rpx;
  margin-right: 20rpx;
  color: #ffe65a;
  font-size: 50rpx;
}
.activity-info-line-result-container{
  height:250rpx;
  position: absolute;
  width: 80%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.text-box-activity-info-count-result{
  color: #ff0022;
}
.button-join-area{
  margin-top: -20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.button-login{
  margin-top: 180rpx;
}
.button-weixin{
  margin-top: 30rpx;
}
.button-join-background{
  width: 60%;
}
.button-join{
  position: absolute;
  width: 60%;
  height: 120rpx;
  margin-top: 0rpx;
  border: none !important;
  background:transparent;
}

.remaining-times-container{
  display: flex;
}
.remaining-times{
  width: 140rpx;
  margin-top: -200rpx;
}

.winning-line-container{
  height:100rpx;
  position: absolute;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}